<%= form_for @tip, :html => { :class => 'form-horizontal' } do |f| %>
  
  <div class="control-group">
    <%= f.label :tip, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tip, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :source, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :source, :class => 'text_field' %>
    </div>
  </div>
  
   
  
  <p><h1> Reporter </h1>
  <%= f.fields_for :reporters do |reporter_form| %>
    <div class="field">
      <%= reporter_form.label :full_name %><br>
      <%= reporter_form.text_field :full_name %>
    </div>
  <% end %></p>
  <%= f.collection_select(:reporter_ids, Reporter.all, :id, :full_name, {selected: @tip.reporter_ids, include_blank: false},{ multiple: true }) %>
  <div class="actions">
  
  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tips_path, :class => 'btn' %>
  </div>
<% end %>
